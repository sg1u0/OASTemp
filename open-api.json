{
  "openapi": "3.0.3",
  "info": {
    "title": "Order API",
    "version": "1.0.0",
    "description": "注文情報を管理するAPIです。"
  },
  "servers": [
    {
      "url": "https://api.example.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/orders/{orderId}": {
      "get": {
        "summary": "注文情報取得API",
        "description": "指定された注文IDに対応する注文情報を取得します。",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "description": "注文ID",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "注文情報取得成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "404": {
            "description": "注文が存在しない"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "required": ["id", "status", "amount"],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1001
          },
          "status": {
            "type": "string",
            "example": "CONFIRMED"
          },
          "amount": {
            "type": "number",
            "format": "decimal",
            "example": 12000.5
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T10:00:00Z"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
